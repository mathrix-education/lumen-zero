{
  "name": "mathrix/lumen-zero",
  "description": "The main library for Mathrix Lumen REST APIs.",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Mathieu Bour",
      "email": "mathieu@mathrix.fr"
    }
  ],
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "dusterio/lumen-passport": "^0.2.9",
    "illuminate/mail": "^5.7|^5.8",
    "illuminate/notifications": "^5.7",
    "laravel/lumen-framework": "5.7.*",
    "symfony/yaml": "^4.2"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "helmich/phpunit-json-assert": "^2.0",
    "nyholm/psr7": "^1.1",
    "phpunit/phpunit": "~7.0",
    "rebilly/openapi-php": "^0.6.0",
    "symfony/psr-http-message-bridge": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Mathrix\\Lumen\\": "src"
    }
  }
}
